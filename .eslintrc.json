{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": [
            "error",
            {
                "objects": "always-multiline",
                "functions": "always-multiline",
                "arrays": "always-multiline"
            }
        ],
        "import/extensions": [
            "error",
            "always"
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ]
    }
}
